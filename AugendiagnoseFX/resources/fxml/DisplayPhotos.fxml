<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<GridPane fx:id="displayMain"
	fx:controller="de.eisfeldj.augendiagnosefx.controller.DisplayPhotosController"
	xmlns:fx="http://javafx.com/fxml" styleClass="display">
	<padding>
		<Insets top="0" right="0" bottom="0" left="0" />
	</padding>
	<columnConstraints>
		<ColumnConstraints prefWidth="150" />
		<ColumnConstraints hgrow="SOMETIMES" />
	</columnConstraints>
	<children>
		<ScrollPane GridPane.columnIndex="0" GridPane.rowIndex="0"
			fitToHeight="true" fitToWidth="true">
			<ListView fx:id="listNames" styleClass="listNames" onMouseClicked="#handleNameClick" />
		</ScrollPane>
		<ScrollPane GridPane.columnIndex="1" GridPane.rowIndex="0"
			fitToHeight="true" fitToWidth="true">
			<ListView fx:id="listPhotos" styleClass="listPhotos" />
		</ScrollPane>
	</children>
</GridPane>