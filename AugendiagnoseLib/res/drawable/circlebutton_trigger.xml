<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <selector>
            <item
                android:state_enabled="true"
                android:state_pressed="true">
                <shape
                    android:innerRadius="10dp"
                    android:shape="oval"
                    android:useLevel="false" >
                    <solid android:color="#8F8F8F" />

                    <stroke
                        android:width="1dp"
                        android:color="#6F6F6F" />
                </shape>
            </item>
            <item>
                <shape
                    android:innerRadius="10dp"
                    android:shape="oval"
                    android:useLevel="false" >
                    <solid android:color="#BFBFBF" />

                    <stroke
                        android:width="1dp"
                        android:color="#AFAFAF" />
                </shape>
            </item>
        </selector>
    </item>
    <item
        android:bottom="@dimen/camerabutton_padding_bottom"
        android:left="@dimen/camerabutton_padding"
        android:right="@dimen/camerabutton_padding"
        android:top="@dimen/camerabutton_padding_top">
        <bitmap android:src="@drawable/ic_launcher" />
    </item>

</layer-list>