<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <selector>
            <item
                android:state_enabled="true"
                android:state_pressed="true">
                <shape
                    android:innerRadius="10dp"
                    android:shape="oval"
                    android:useLevel="false" >
                    <solid android:color="#4F4F4F" />

                    <stroke
                        android:width="1dp"
                        android:color="#5F5F5F" />
                </shape>
            </item>
            <item>
                <shape
                    android:innerRadius="10dp"
                    android:shape="oval"
                    android:useLevel="false" >
                    <solid android:color="#2F2F2F" />

                    <stroke
                        android:width="1dp"
                        android:color="#3F3F3F" />
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <shape
            android:innerRadius="@dimen/camerabutton_overlay_circle_radius"
            android:shape="ring"
            android:thickness="1dp"
            android:useLevel="false" >
            <solid android:color="@android:color/holo_red_light" />
        </shape>
    </item>

</layer-list>