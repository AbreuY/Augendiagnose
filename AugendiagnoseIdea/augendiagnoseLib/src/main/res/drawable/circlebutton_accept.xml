<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <selector>
            <item
                android:state_enabled="true"
                android:state_pressed="true">
                <shape
                    android:innerRadius="10dp"
                    android:shape="oval"
                    android:useLevel="false">
                    <solid android:color="#008F00"/>

                    <stroke
                        android:width="1dp"
                        android:color="#004F00"/>
                </shape>
            </item>
            <item>
                <shape
                    android:innerRadius="10dp"
                    android:shape="oval"
                    android:useLevel="false">
                    <solid android:color="#00CF00"/>

                    <stroke
                        android:width="1dp"
                        android:color="#008F00"/>
                </shape>
            </item>
        </selector>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <bitmap android:src="@drawable/ic_btn_accept"/>
    </item>

</layer-list>